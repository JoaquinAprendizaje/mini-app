<p style="color: green"><%= notice %></p>

<%= render @publication %>
  <div class="photo-container">
    <div class="photo">
      <% if @publication.photo.attached?%>
        <image src="<%=(url_for(@publication.photo))%>">
        <% end %>
    </div>
  </div>
  <div class="comments-container">
    <div class="comments">
    
    <% @publication.comments.each do | comment |%>
        <%= render 'publications/comments/comment', :comment => comment %>
    <% end%>
    
  <%= simple_form_for Comment.new, url: publication_comments_path(publication_id: @publication.id), remote: true do | f |
    f.input :body, label: false, as: :string, placeholder: 'Add a comment...', input_html: {autocomplete: :off}
    end
  %> 
    </div>
</div>
<div>
  <%# <%= link_to "Edit this publication", edit_publication_path(@publication) %> 
    <%= link_to "Back to publications", publications_path %>

  <%# <%= button_to "Destroy this publication", @publication, method: :delete %>
</div>

