<p style="color: green"><%= notice %></p>
<div class="max-w-full">
<h1 class="text-5xl">Publications</h1>
<hr>
</div>

<div id="publications">
  <% @publications.each do |publication| %>
    <% if publication.photo.attached? %>
        <%if publication.photo.representable?%>
            <%= image_tag publication.photo.representation(resize_to_limit: [200, 200])%>
        <%end%>
    <%end%>
    <%= render publication %>
    <p>
      <%= link_to "Show this publication", publication %>
    </p>
    <hr>
  <% end %>
</div>

<%= link_to "New publication", new_publication_path %>
